{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
